{
    "name": "pehapkari/sample-package",
    "description": "Exact description, what this package does the best.",
    "license": "MIT",
    "authors": [
        { "name": "Pehapkari Community", "homepage": "https://github.com/pehapkari/Pehapkari/graphs/contributors" }
    ],
    "require": {
        "php": "^7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "symplify/coding-standard": "^1.2"
    },
    "autoload": {
        "psr-4": {
            "Pehapkari\\SamplePackage\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pehapkari\\SamplePackage\\Tests\\": "tests"
        }
    },
    "scripts": {
        "check-cs": "vendor/bin/symplify-cs check src tests",
        "fix-cs": "vendor/bin/symplify-cs fix src tests"
    }
}
